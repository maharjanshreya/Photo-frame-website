<!DOCTYPE html>
<html>
<head>
    <title>My Form</title>
    <style>
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #f0f0f0;
        }

        .container img {
            max-width: 100%;
            height: auto;
        }

        .container form {
            text-align: left;
        }
        input[type="password"] {
            padding: 15px;
            width: 250px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
            font-size: 16px;
            color: #555;
        }
        
        input[type="submit"] {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            font-size: 16px;
            cursor: pointer;
            margin: 0 auto; 
            display: block; 
        }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }
        .cancel-link {
    color: rgb(31, 120, 244);
    text-align: left;
    align-items: left;
    justify-content: left;
    display: inline-block; 
    cursor: pointer; /* Add cursor pointer to indicate it's clickable */
    border-bottom: 1px solid transparent; /* Add transparent border initially */
    border-right: #0056b3;
    transition: border-color 0.3s ease; /* Add transition for smooth effect */
}

.cancel-link:hover {
    border-color: rgb(31, 120, 244); /* Change border color on hover */
    color: darken(rgb(31, 120, 244), 10%); /* Darken text color on hover */
}
    </style>
    <script>
        var status = '<%- JSON.stringify(status) %>';
        if (JSON.parse(status).status == "verified") {
            res.render("verified");
        }

        function validateForm() {
            var password = document.getElementById('password').value;
            var confirmPassword = document.getElementById('confirm-password').value;
            var errorDiv = document.getElementById('error-message');

            if (password !== confirmPassword) {
                errorDiv.innerHTML = "Password and Confirm Password do not match";
                return false;
            } else {
                errorDiv.innerHTML = "";
                return true;
            }
        }
        
    </script>
</head>
<body>
    <div class="container" style="background-color: rgb(249, 249, 249);">
      
        <img src="/Rectangle 1.png" alt="Image">
        <h1 style="margin-bottom: 3px;">
            Reset password <br/></h1>
          <p style="color: rgb(57, 57, 57); font-size: 18px;">  <%= email%></p>
        
        <form action="/verified-password" method="POST" onsubmit="return validateForm()">
            <label for="password" style="font-family: Arial;" >Password</label><br>
            <input type="password" id="password" name="password" required placeholder="Your new password"><br><br>
        
            <label for="confirm-password" style="font-family: Arial;">Confirm Password</label><br>
            <input type="password" id="confirm-password" name="confirm-password" required placeholder="Confirm new password"><br><br>
        
            <input type="submit" value="Submit"><br>
            <div id="error-message" style="color: red;"></div>
            <p class="cancel-link" onclick="redirectToLogin()">Cancel</p>
        </form>
    </div>
    <script>
        function redirectToLogin() {
            window.location.href = "http://localhost:3000/login";
        }
    </script>
</body>
</html>
